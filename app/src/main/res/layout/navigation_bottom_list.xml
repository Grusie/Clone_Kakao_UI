<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/navigation_bottom_items">

        <RelativeLayout
            android:id="@+id/btn_userFragment"
            style="@style/navigation_bottom_list">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/img_error"
                android:src="@drawable/user_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_chatFragment"
            style="@style/navigation_bottom_list">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/img_error"
                android:src="@drawable/chat_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_viewFragment"
            style="@style/navigation_bottom_list">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/view_selector"
                android:contentDescription="@string/img_error"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_shoppingFragment"
            style="@style/navigation_bottom_list">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shopping_selector"
                android:contentDescription="@string/img_error"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_plusFragment"
            style="@style/navigation_bottom_list">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/plus_selector"
                android:contentDescription="@string/img_error"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>